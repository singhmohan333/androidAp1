<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mohan.workout.WorkOutActivity"
    tools:showIn="@layout/activity_work_out">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:background="@color/colorAccent"
        android:entries="@array/workoutitem" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@android:color/darker_gray"
        android:text="@string/hello_mohan"
        android:textSize="30sp"
        android:layout_below="@+id/findworkout"
        android:layout_centerHorizontal="true" />


    <Button

        android:id="@+id/findworkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/holo_green_light"
        android:onClick="onClickWork"
        android:text="@string/my_button"
        tools:ignore="RelativeOverlap,RtlHardcoded"
        android:layout_marginTop="134dp"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
